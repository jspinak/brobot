# Lombok configuration for Brobot library
# This file ensures consistent Lombok behavior across IDEs and build systems

# Enable logging of what Lombok is doing (helpful for debugging)
config.stopBubbling = true

# Enable annotation processing
lombok.addLombokGeneratedAnnotation = true

# Don't override builder class names - let @Builder annotations specify them
# lombok.builder.className = Builder

# Enable field defaults in builders  
lombok.fieldDefaults.defaultFinal = false

# Ensure Data annotation generates all necessary methods
lombok.data.flagUsage = ALLOW

# Ensure Builder annotation generates properly
lombok.builder.flagUsage = ALLOW

# Enable Getter/Setter generation
lombok.getter.flagUsage = ALLOW
lombok.setter.flagUsage = ALLOW

# Allow Value annotation (immutable classes)
lombok.value.flagUsage = ALLOW

# Ensure constructor generation works
lombok.allArgsConstructor.flagUsage = ALLOW
lombok.noArgsConstructor.flagUsage = ALLOW
lombok.requiredArgsConstructor.flagUsage = ALLOW

# Ensure toString generation
lombok.toString.flagUsage = ALLOW

# Ensure equals/hashCode generation
lombok.equalsAndHashCode.flagUsage = ALLOW

# Disable experimental features that might cause issues
lombok.experimental.flagUsage = WARNING