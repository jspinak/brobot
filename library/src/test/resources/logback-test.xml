<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender that writes to System.out -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set root logger level to INFO and attach console appender -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Set specific loggers to INFO level for tests -->
    <logger name="io.github.jspinak.brobot" level="INFO" />
</configuration>