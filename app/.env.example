# Server Configuration
SERVER_PORT=8080

# Database Configuration (example uses postgresql)
DATABASE_URL=jdbc:postgresql://localhost:5432/database-name-here
DATABASE_USERNAME=your-username-here
DATABASE_PASSWORD=your-password-here
SHOW_SQL=true
FORMAT_SQL=true

# Client App Configuration - Production
CLIENT_BASE_URL=https://api.website.com
CLIENT_APP_USERNAME=your-username-here
CLIENT_APP_PASSWORD=your-password-here
CLIENT_APP_API_KEY=your-api-key-here

# Client App Configuration - Development
DEV_CLIENT_BASE_URL=http://localhost:8081

# Authentication
DYNAMIC_AUTH_TOKEN=your-auth-token-here

# Logging Levels (DEBUG, INFO, WARN, ERROR)
SPRING_LOG_LEVEL=INFO
HIKARI_LOG_LEVEL=INFO
WEBSOCKET_LOG_LEVEL=DEBUG
MESSAGING_LOG_LEVEL=DEBUG
SECURITY_LOG_LEVEL=DEBUG
SERVICES_LOG_LEVEL=DEBUG